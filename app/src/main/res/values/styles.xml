<resources>
    <!-- Text appearance used by Biometric switch text -->
    <style name="Widget.BiometricSwitch.Text" parent="TextAppearance.MaterialComponents.Body2">
        <!-- Exact font: place a font file in res/font/ if you want custom -->
        <!-- Example uses Roboto Medium (put roboto_medium.ttf into res/font/roboto_medium.ttf) -->
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#5A3D9B</item>
    </style>
</resources>
