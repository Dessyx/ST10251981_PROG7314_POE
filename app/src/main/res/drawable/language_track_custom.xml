<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/language_track_custom.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- subtle darker underlay -->
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="#E6B887"/> <!-- slightly darker orange for underlay -->
        </shape>
    </item>

    <!-- main pill track -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="142dp" android:height="19dp"/>
            <corners android:radius="10dp"/>
            <solid android:color="#FED7AA"/> <!-- base orange -->
            <stroke android:width="1dp" android:color="#000000"/>
        </shape>
    </item>

    <!-- top gloss -->
    <item android:top="1dp" android:left="2dp" android:right="2dp" android:bottom="8dp">
        <shape>
            <corners android:radius="8dp"/>
            <gradient android:startColor="#30FFFFFF" android:endColor="#00FFFFFF" android:angle="270"/>
        </shape>
    </item>

</layer-list>
