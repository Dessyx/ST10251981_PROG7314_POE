<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/biometric_thumb.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1) base white rounded rectangle (thumb) -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="36dp" android:height="36dp" />
            <corners android:radius="18dp" />
            <solid android:color="@color/biometric_thumb_color" />
            <stroke android:width="1dp" android:color="#DDDDDD" />
        </shape>
    </item>

    <!-- 2) very subtle top highlight -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="18dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270" />
        </shape>
    </item>

    <!-- 3) faint inner shadow at bottom to simulate depth -->
    <item android:top="18dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <solid android:color="#10000000"/>
        </shape>
    </item>

</layer-list>
