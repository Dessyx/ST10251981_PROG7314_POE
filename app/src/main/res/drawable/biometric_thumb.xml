<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/biometric_thumb.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- white rounded thumb with black stroke -->
    <item>
        <shape android:shape="rectangle">
            <!-- set thumb size to match Compose: 76dp x 19dp -->
            <size android:width="76dp" android:height="19dp" />
            <corners android:radius="10dp" />
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="#000000" />
        </shape>
    </item>

    <!-- gentle top highlight -->
    <item android:top="2dp" android:left="4dp" android:right="4dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient android:startColor="#30FFFFFF" android:endColor="#00FFFFFF" android:angle="270"/>
        </shape>
    </item>
</layer-list>

