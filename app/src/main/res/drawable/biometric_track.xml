<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/biometric_track.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- shadow-like layer (subtle darker underlay) -->
    <item android:top="1dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#D6C7FF" />
        </shape>
    </item>

    <!-- main pill -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="140dp" android:height="19dp" />
            <corners android:radius="10dp" />
            <gradient
                android:startColor="#FFFFFF"
                android:centerColor="#ECE4FF"
                android:endColor="#ECE4FF"
                android:angle="270"/>
            <stroke android:width="1dp" android:color="#000000" />
        </shape>
    </item>

    <!-- inner glossy highlight at top -->
    <item android:top="1dp" android:left="2dp" android:right="2dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient android:startColor="#30FFFFFF" android:endColor="#00FFFFFF" android:angle="270"/>
        </shape>
    </item>
</layer-list>

