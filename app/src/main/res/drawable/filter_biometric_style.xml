<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Top highlight layer -->
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="#D6C7FF"/>
        </shape>
    </item>

    <!-- Main background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="#ECE4FF"/>
            <stroke android:width="1dp" android:color="#000000"/>
        </shape>
    </item>

    <!-- Gradient overlay for depth -->
    <item android:top="1dp" android:left="2dp" android:right="2dp" android:bottom="8dp">
        <shape>
            <corners android:radius="8dp"/>
            <gradient android:startColor="#30FFFFFF" android:endColor="#00FFFFFF" android:angle="270"/>
        </shape>
    </item>

</layer-list>
