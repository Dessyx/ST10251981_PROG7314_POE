<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/view_language_toggle.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/language_toggle_root"
    android:layout_width="142dp"
    android:layout_height="19dp">

    <!-- Track -->
    <View
        android:id="@+id/language_track"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/language_track_custom" />

    <!-- Right-side label (Afrikaans) positioned near the right like the Compose sample -->
    <TextView
        android:id="@+id/language_right_label"
        android:layout_width="44dp"
        android:layout_height="11dp"
        android:text="Afrikaans"
        android:textSize="10sp"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:layout_gravity="top|start"
        android:layout_marginTop="4dp"
        android:translationX="85dp" />

    <!-- Thumb container (white) -->
    <FrameLayout
        android:id="@+id/language_thumb"
        android:layout_width="76dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/language_thumb_custom"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <!-- Left label inside thumb: English -->
        <TextView
            android:id="@+id/language_thumb_text"
            android:layout_width="44dp"
            android:layout_height="11dp"
            android:layout_gravity="top|start"
            android:layout_marginTop="3dp"
            android:text="English"
            android:textSize="10sp"
            android:fontFamily="sans-serif"
            android:textColor="#000000" />
    </FrameLayout>

</FrameLayout>
