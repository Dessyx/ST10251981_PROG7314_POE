<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_filter_background"
    android:padding="24dp">

    <!-- Filter Title with Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_filter"
            android:contentDescription="Filter icon"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

    </LinearLayout>

    <!-- Filter Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Day Option -->
        <LinearLayout
            android:id="@+id/optionDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/filter_option_background"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/filter_dot_pink"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day"
                android:textSize="16sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Week Option -->
        <LinearLayout
            android:id="@+id/optionWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/filter_option_background"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/filter_dot_blue"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Week"
                android:textSize="16sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Month Option -->
        <LinearLayout
            android:id="@+id/optionMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/filter_option_background"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/filter_dot_green"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month"
                android:textSize="16sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Custom Option -->
        <LinearLayout
            android:id="@+id/optionCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/filter_option_background"
            android:clickable="true"
            android:focusable="true">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/filter_dot_purple"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom"
                android:textSize="16sp"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
