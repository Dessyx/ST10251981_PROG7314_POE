<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_toggle_root"
    android:layout_width="140dp"
    android:layout_height="19dp">

    <View
        android:id="@+id/notification_track"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/notification_track_custom" />

    <FrameLayout
        android:id="@+id/notification_thumb"
        android:layout_width="76dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/notification_thumb_white"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <TextView
            android:id="@+id/notification_thumb_text"
            android:layout_width="44dp"
            android:layout_height="11dp"
            android:layout_gravity="top|start"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:text="On"
            android:textColor="#000000"
            android:textSize="10sp" />
    </FrameLayout>

</FrameLayout>

